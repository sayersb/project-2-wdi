<h1 style="color:gold;">Predictions</h1>
<ul>

<% if(locals.isLoggedIn){ %>
<% results.forEach( result =>{ %>
<li>
    <div>  <a href='/results/<%= result.id %>' style="color:white;"> Winner :  <%= result.winner %> </a> </div>
    <div>  <a href='/results/<%= result.id %>' style="color:white;"> Runner-Up :  <%= result.second %> </a> </div>
    <div>  <a href='/results/<%= result.id %>'  style="color:white;"> Top Scorer :  <%= result.topScorer %> </a> </div>
    <img style="max-width: 220px; margin-top: 12px; margin-bottom: 12px;" src='<%= result.image %>' alt='<%= result.winner %>' />
    <% if(result.creator){%>
    <a style="color:white;">  <%= result.creator.username %> </a>
  <%  } %>

  </li>
<% }) %>
</ul>
<% } %>


<% if(locals.isLoggedIn){ %>
<h2 style="color:gold;">My Predictions</h2>
<%= locals.user.result %>
<ul>

<% locals.user &&  locals.user.results && locals.user.results.forEach( result =>{ %>
  <li>
    <img style="max-width: 200px; margin-top:12px; margin-bottom: 12px;" src='<%= result.image %>' alt='<%= result.winner %>' />
    <% if(result.creator){%>
      <%= result.creator.username %>
  <%  } %>
  </li>
<% }) %>
</ul>
<% } %>
