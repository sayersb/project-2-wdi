<h2><%= topten.country %></h2>

<div class="columns">
  <div class="column is-half">
    <img src="<%= topten.image %>" alt="<%= topten.country %>">
  </div>
  <div class="column is-half">
    <ul>
     <li>  Ranking :  <%= topten.ranking %> </li>
     <li>  History :  <%= topten.history %> </li>
     <li>  Odds :  <%= topten.odds %> </li>
     <li>  Stars : <%= topten.stars %> </li>
   </ul>
   <a href="/toptens/<%= topten.id %>/edit">Edit</a>
   <form action="/toptens/<%= topten.id %>/" method="post">
     <input type="hidden" name="_method" value="DELETE">
     <button name="button">DELETE</button>

   </form>
  </div>

</div>
