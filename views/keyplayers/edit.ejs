<h2>Edit <%= keyplayer.name %></h2>


<form action="/keyplayers/<%= keyplayer.id %>" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <input class="input" type="text" name="name" value="<%= keyplayer.name %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Country</label>
    <div class="control">
      <input class="input" type="text" name="country" value="<%= keyplayer.country %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Caps</label>
    <div class="control">
      <input class="input" type="text" name="caps" value="<%= keyplayer.caps %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Goals</label>
    <div class="control">
      <input class="input" type="text" name="goals" value="<%= keyplayer.goals %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Club</label>
    <div class="control">
      <input class="input" type="text" name="club" value="<%= keyplayer.club %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Image</label>
    <div class="control">
      <input class="input" type="text" name="image" value="<%= keyplayer.image %>">
    </div>
  </div>
  <div class="field is-grouped">

    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
  </div>
    <div class="control">
      <button class="button is-text">Cancel</button>
    </div>
  </div>
</form>
