<h1 class="title"><%= title %></h1>

<div class="columns">
  <% botrs.forEach( (botr, key) => { %>
    <div class="column is-one-third-desktop is-half-tablet">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="<%= botr.image %>" alt="<%= botr.country %>">
          </figure>
        </div>
        <div class="card-content">
          <div class="content">
              <h4 class="title is-4">
              <a href="/botrs/<%= botr._id %>">
              <%= botr.country %>
              </a>
              </h4>
              <h6 class="subtitle is-6">Ranking <%= botr.ranking %></h6>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
