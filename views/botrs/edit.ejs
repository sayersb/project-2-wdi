<h2>Edit <%= botr.name %></h2>


<form action="/botrs/<%= botr.id %>" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="field">
    <label class="label">Country</label>
    <div class="control">
      <input class="input" type="text" name="country" value="<%= botr.country %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Ranking</label>
    <div class="control">
      <input class="input" type="text" name="ranking" value="<%= botr.ranking %>">
    </div>
  </div>
  <div class="field">
    <label class="label">History</label>
    <div class="control">
      <input class="input" type="text" name="history" value="<%= botr.history %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Stars</label>
    <div class="control">
      <input class="input" type="text" name="stars" value="<%= botr.stars %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Odds</label>
    <div class="control">
      <input class="input" type="text" name="odds" value="<%= botr.odds %>">
    </div>
  </div>
  <div class="field">
    <label class="label">Image</label>
    <div class="control">
      <input class="input" type="text" name="image" value="<%= botr.image %>">
    </div>
  </div>
  <div class="field is-grouped">

    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
  </div>
    <div class="control">
      <button class="button is-text">Cancel</button>
    </div>
  </div>
</form>
